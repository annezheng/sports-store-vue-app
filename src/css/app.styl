// app global css
@import url('https://fonts.googleapis.com/css?family=Maven+Pro:500');

:root {
  box-sizing: border-box;
  font-size: calc(0.7em + 1vw);
}

@media (min-width: 800px) {
  :root {
    font-size: 0.875em;
  }
}

@media (min-width: 1200px) {
  :root {
    font-size: 1em;
  }
}

*,
::before,
::after {
  box-sizing: inherit;
}

html {
  min-height: 100vh;
}
body {
  margin: 0;
  font-family: 'Maven Pro', sans-serif;
}

img {
  max-width: 100%;
}

